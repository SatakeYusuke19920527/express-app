{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TypeScript",
      "program": "${file}",
      "preLaunchTask": "Compile TypeScript",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ]
    }
  ],
  "tasks": [
    {
      "type": "npm",
      "script": "dev:w",
      "problemMatcher": [],
      "label": "npm: dev:w",
      "detail": "ts-node-dev --respawn ./src/index.ts"
    }
  ]
}